<!-- search_result.ejs -->
<html>
<head>
    <title>Coding Forum</title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
</head>
<body>
    <p><a href="/">Back</a></p>
    <h1>Coding Forum</h1>
    <h2>Search result:</h2>
<!-- conditions if the result is found or not  -->
    <% if (message) { %>
        <p><%= message %></p>
    <% } else { %>
        <ul>
            <% for (let post of result) { %>
                <li><%= post.post_id %> <%= post.post_text %></li>
            <% } %>
        </ul>
    <% } %>
</body>
</html>
